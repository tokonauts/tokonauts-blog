---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 hover:shadow-lg transition-shadow duration-300">
  <div class="flex justify-between items-center mb-5 text-gray-500">
    <span class="bg-blue-100 text-blue-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">
      {tags[0] || 'Article'}
    </span>
    <span class="text-sm">{formattedDate}</span>
  </div>
  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
    <a href={`/blog/${slug}`} class="hover:underline hover:text-blue-600 dark:hover:text-blue-400">{title}</a>
  </h2>
  <p class="mb-5 font-light text-gray-500 dark:text-gray-400 line-clamp-3">
    {description}
  </p>
  <div class="flex justify-between items-center">
    <div class="flex items-center space-x-2">
        {tags.slice(1).map((tag) => (
             <span class="text-xs font-medium px-2.5 py-0.5 rounded border border-gray-200 text-gray-500 dark:border-gray-600 dark:text-gray-400">
                #{tag}
             </span>
        ))}
    </div>
    <a href={`/blog/${slug}`} class="inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline">
      Read more
      <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    </a>
  </div>
</article>
