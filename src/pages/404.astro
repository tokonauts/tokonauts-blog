---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="Page not found">
  <section class="py-32 text-center">
    <h1 class="text-9xl font-bold text-gray-200 dark:text-gray-800">404</h1>
    <h2 class="text-2xl font-bold mt-4 mb-4">Page Not Found</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
      Go Home
    </a>
  </section>
</BaseLayout>
