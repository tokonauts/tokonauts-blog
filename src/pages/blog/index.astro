---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Blog - Tokonauts" description="Articles about AI, automation, and coding">
  <section class="py-16">
    <h1 class="text-4xl font-bold mb-4">Blog</h1>
    <p class="text-gray-600 dark:text-gray-400 mb-12">
      Thoughts on AI, automation, coding, and building in public.
    </p>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {posts.map((post) => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
        />
      ))}
    </div>

    {posts.length === 0 && (
      <p class="text-center text-gray-500">No posts yet. Check back soon!</p>
    )}
  </section>
</BaseLayout>
